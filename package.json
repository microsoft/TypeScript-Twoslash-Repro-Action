    "node",
    "typescript"
  ],
  "author": "Orta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "^4.0.0",
    "@typescript/twoslash": "^1.1.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "@zeit/ncc": "^0.22.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "jest-file-snapshot": "^0.3.8",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^4.2.0-dev.20201207"
  }
